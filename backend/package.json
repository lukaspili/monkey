{
  "name": "monkey-backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "start": "node bin/server.js",
    "build": "node ace build",
    "dev": "node ace serve --hmr",
    "email-dev": "email dev --dir mail-templates --port 3005",
    "test": "node ace test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "edge": "edgedb migration apply --dev-mode && generate interfaces --file db/gen/schema.ts && generate edgeql-js --output-dir db/gen/edgeql-js --target mts --force-overwrite",
    "wipe": "edgedb branch switch main && edgedb branch drop dev --non-interactive --force && edgedb branch switch -c -e dev",
    "migrate": "edgedb migration apply --dev-mode && generate interfaces --file db/gen/schema.ts && generate edgeql-js --output-dir db/gen/edgeql-js --target mts --force-overwrite",
    "migrate+w": "pnpm run wipe && pnpm run migrate",
    "migrate+s": "pnpm run migrate && pnpm run seed",
    "migrate+ws": "pnpm run wipe && pnpm run migrate && pnpm run seed",
    "seed": "node ace seed"
  },
  "imports": {
    "#controllers/*": "./app/controllers/*.js",
    "#exceptions/*": "./app/exceptions/*.js",
    "#models/*": "./app/models/*.js",
    "#mails/*": "./app/mails/*.js",
    "#services/*": "./app/services/*.js",
    "#tasks/*": "./app/tasks/*.js",
    "#guards/*": "./app/guards/*.js",
    "#listeners/*": "./app/listeners/*.js",
    "#events/*": "./app/events/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#validators/*": "./app/validators/*.js",
    "#payloads/*": "./app/payloads/*.js",
    "#providers/*": "./providers/*.js",
    "#policies/*": "./app/policies/*.js",
    "#abilities/*": "./app/abilities/*.js",
    "#database/*": "./database/*.js",
    "#start/*": "./start/*.js",
    "#tests/*": "./tests/*.js",
    "#config/*": "./config/*.js",
    "#utils/*": "./utils/*.js",
    "#db": "./db/client/service.js",
    "#db/database": "./db/client/database.js",
    "#db/queries": "./db/gen/queries.js",
    "#db/schema": "./db/gen/schema.js",
    "#db/edgeql/*": "./db/gen/edgeql-js/*.mts",
    "#mail-templates/*": "./mail-templates/*.js",
    "#seed/*": "./seed/*.js"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "2.0.0-beta.6",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@edgedb/generate": "^0.5.6",
    "@faker-js/faker": "^9.0.1",
    "@japa/api-client": "^2.0.3",
    "@japa/assert": "^2.1.0",
    "@japa/plugin-adonisjs": "^3.0.1",
    "@japa/runner": "^3.1.4",
    "@swc/core": "^1.7.26",
    "@types/bcrypt": "^5.0.2",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.6",
    "eslint": "^9.10.0",
    "hot-hook": "^0.2.6",
    "pino-pretty": "^11.2.2",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-email": "^3.0.1",
    "ts-node-maintained": "^10.9.4",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@adonisjs/auth": "^9.2.3",
    "@adonisjs/core": "^6.13.1",
    "@adonisjs/mail": "^9.2.2",
    "@aws-sdk/client-s3": "^3.651.1",
    "@aws-sdk/s3-request-presigner": "^3.651.1",
    "@date-fns/utc": "^2.1.0",
    "@poppinss/cliui": "^6.4.1",
    "@react-email/components": "0.0.25",
    "@vinejs/vine": "^2.1.0",
    "bcrypt": "^5.1.1",
    "date-fns": "^4.0.0",
    "edgedb": "^1.5.12",
    "filenamify": "^6.0.0",
    "luxon": "^3.5.0",
    "nanoid": "^5.0.7",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.0.0",
    "ts-custom-error": "^3.3.1"
  },
  "hotHook": {
    "boundaries": [
      "./app/controllers/**/*.ts",
      "./app/middleware/*.ts"
    ]
  },
  "packageManager": "pnpm@9.12.3"
}
