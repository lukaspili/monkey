{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "jsx": "react-jsx",
    "paths": {
      "#controllers/*": ["./app/controllers/*.js"],
      "#exceptions/*": ["./app/exceptions/*.js"],
      "#models/*": ["./app/models/*.js"],
      "#mails/*": ["./app/mails/*.js"],
      "#services/*": ["./app/services/*.js"],
      "#tasks/*": ["./app/tasks/*.js"],
      "#guards/*": ["./app/guards/*.js"],
      "#listeners/*": ["./app/listeners/*.js"],
      "#events/*": ["./app/events/*.js"],
      "#middleware/*": ["./app/middleware/*.js"],
      "#validators/*": ["./app/validators/*.js"],
      "#payloads/*": ["./app/payloads/*.js"],
      "#providers/*": ["./providers/*.js"],
      "#policies/*": ["./app/policies/*.js"],
      "#abilities/*": ["./app/abilities/*.js"],
      "#tests/*": ["./tests/*.js"],
      "#start/*": ["./start/*.js"],
      "#config/*": ["./config/*.js"],
      "#utils/*": ["./utils/*.js"],
      "#db": ["./db/client/service.js"],
      "#db/database": ["./db/client/database.js"],
      "#db/queries": ["./db/gen/queries.js"],
      "#db/schema": ["./db/gen/schema.js"],
      "#db/edgeql": ["./db/gen/edgeql-js/*.mjs"],
      "#mail-templates/*": ["./mail-templates/*.js"],
      "#seed/*": ["./seed/*.js"]
    }
  }
}
